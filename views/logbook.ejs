<!DOCTYPE html>
<html>
    <head>
        <%- include('./head'); %>
        <link rel="stylesheet" type="text/css" href="css/logbook.css">
    </head>
    <body>
        <div class="container">
            <div class="wrapper <%= theme %>">
                <div class="mainbar">
                    <p><%= fullName %></p>
                    <select id="services">
                        <% services.forEach(act => { %>
                            <option value=<%= act.ID %>><%= act.service %></option> <!-- aggiungere periodi -->
                        <% }) %>
                    </select>
                    <div>
                        <a id="theme" class="icon-btn"><i class="fas fa-palette"></i></a>
                        <a id="exit" href="/logbook/logout" class="icon-btn"><i class="fas fa-sign-out-alt"></i></a>
                    </div>
                </div>
                <div id="tables">
                    <% tables.forEach(tb => { %>
                        <%- include('./table', { title: tb }); %>
                    <% }) %>
                </div>
            </div>
        </div>
        <%- include('./footer'); %>
        <script src="javascripts/logbook.js"></script>
    </body>
</html>
